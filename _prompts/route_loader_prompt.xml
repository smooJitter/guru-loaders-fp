<RouteLoader>
  <Name>RouteLoader</Name>
  <Description>Loads and manages application routes</Description>
  <Patterns>
    <Pattern type="default">**/routes/**/*.route.js</Pattern>
    <Pattern type="index">**/routes/index.js</Pattern>
  </Patterns>
  <Validation>
    <Schema>
      <Field name="name" type="String" />
      <Field name="routes" type="Array" />
      <Field name="options" type="Object" />
    </Schema>
    <Function>validateRoute</Function>
  </Validation>
  <Transformation>
    <Function>transformRoute</Function>
  </Transformation>
</RouteLoader> 