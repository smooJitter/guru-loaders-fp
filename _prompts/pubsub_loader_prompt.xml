<PubSubLoader>
  <Name>PubSubLoader</Name>
  <Description>Loads and manages publish-subscribe mechanisms</Description>
  <Patterns>
    <Pattern type="default">**/pubsub/**/*.pubsub.js</Pattern>
    <Pattern type="topics">**/pubsub/**/*.topics.js</Pattern>
    <Pattern type="index">**/pubsub/index.js</Pattern>
  </Patterns>
  <Validation>
    <Schema>
      <Field name="name" type="String" />
      <Field name="topics" type="Object" />
      <Field name="handlers" type="Object" />
      <Field name="options" type="Object" />
    </Schema>
    <Function>validatePubsub</Function>
  </Validation>
  <Transformation>
    <Function>transformPubsub</Function>
  </Transformation>
  <Topics>
    <Topic name="topicName" description="Description of the topic" />
    <!-- Add more topics as needed -->
  </Topics>
  <Handlers>
    <Handler name="handlerName" description="Description of the handler" />
    <!-- Add more handlers as needed -->
  </Handlers>
</PubSubLoader> 