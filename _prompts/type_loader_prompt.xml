<TypeLoader>
  <Name>TypeLoader</Name>
  <Description>Loads and manages GraphQL types and schemas</Description>
  <Patterns>
    <Pattern type="context">Core context types</Pattern>
    <Pattern type="loader">Loader-specific types</Pattern>
    <Pattern type="query">Query types for introspection</Pattern>
  </Patterns>
  <Validation>
    <Schema>
      <Field name="name" type="String" />
      <Field name="fields" type="Array" />
      <Field name="interfaces" type="Array" />
      <Field name="description" type="String" />
    </Schema>
  </Validation>
  <Transformation>
    <Function>mergeTypeDefs</Function>
    <Function>mergeResolvers</Function>
  </Transformation>
</TypeLoader> 