<AuthLoader>
  <Name>AuthLoader</Name>
  <Description>Loads and manages authentication and authorization logic</Description>
  <Patterns>
    <Pattern type="default">**/auth/**/*.auth.js</Pattern>
    <Pattern type="roles">**/auth/**/*.roles.js</Pattern>
    <Pattern type="guards">**/auth/**/*.guards.js</Pattern>
    <Pattern type="index">**/auth/index.js</Pattern>
  </Patterns>
  <Validation>
    <Schema>
      <Field name="name" type="String" />
      <Field name="roles" type="Object" />
      <Field name="guards" type="Object" />
      <Field name="options" type="Object" />
    </Schema>
    <Function>validateAuth</Function>
  </Validation>
  <Transformation>
    <Function>transformAuth</Function>
  </Transformation>
  <Roles>
    <Role name="roleName" description="Description of the role" />
    <!-- Add more roles as needed -->
  </Roles>
  <Guards>
    <Guard name="guardName" description="Description of the guard" />
    <!-- Add more guards as needed -->
  </Guards>
</AuthLoader> 