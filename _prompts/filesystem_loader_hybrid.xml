<FileSystem>
  <Folder name="root">
    <Description>The root directory of the hybrid file system</Description>
    <Folders>
      <Folder name="modules">
        <Description>Contains feature-specific modules with functional components</Description>
        <Folders>
          <Folder name="user">
            <Description>User management module</Description>
            <Files>
              <File name="user.model.js" type="model" />
              <File name="user.actions.js" type="action" />
              <File name="user.routes.js" type="route" />
            </Files>
          </Folder>
          <Folder name="product">
            <Description>Product management module</Description>
            <Files>
              <File name="product.model.js" type="model" />
              <File name="product.actions.js" type="action" />
              <File name="product.routes.js" type="route" />
            </Files>
          </Folder>
        </Folders>
      </Folder>
      <Folder name="shared">
        <Description>Contains shared functional components used across modules</Description>
        <Files>
          <File name="shared.utils.js" type="utility" />
          <File name="shared.constants.js" type="constant" />
        </Files>
      </Folder>
    </Folders>
    <Files>
      <File name="index.js" type="index" />
    </Files>
  </Folder>
</FileSystem> 